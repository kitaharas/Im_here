<% provide(:title, "MyPage:edit") %>


<div class="edit-page-section">
  <div class="profile">
    <div class="profile-img">
      <div class="img-objet">
        <% if @user.image_name.size == 0 %>
          <%= image_tag "/assets/catman" %>
        <% else %>
          <%= image_tag @user.image_name.url %>
        <% end %>
      </div>
    <%= form_for(@user, url:{controller: 'users',action: 'update', id: @user.id}) do |f| %>
      <div class="img-btn">画像変更
      <%= f.file_field :image_name %>
      </div>
    </div>
    <p>name： <%= @user.name %></p>
    <p>フォロー数: <%= @user.followings.count %> フォロワー数: <%= @user.followers.count %></p>
    <div class="profile-coment">
      <% @user.errors.full_messages.each do |message| %>
      <p class="edit-error">
      <%= message %>
      </p>
      <% end %>
      <% if @user.comment.nil? %>
      <%= f.text_area(:comment, class: "profile-comment-text", placeholder: "プロフィールコメント", size:"45x10") %>
      <% else %>
      <%= f.text_area(:comment, class: "profile-comment-text", placeholder: :comment, size:"45x10") %>
      <% end %>
    </div>
    <%= f.submit(class: "edit-btn") %>
    <% end %>
  </div>
  
</div>


